<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Listings</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            /* height: 100vh; */
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
            margin: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        li:last-child {
            border-bottom: none;
        }

        img {
            border-radius: 8px;
            max-width: 150px;
            height: auto;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin: 0;
            color: #007BFF;
        }

        p {
            margin: 5px 0;
        }

        a {
            color: #007BFF;
            text-decoration: none;
            font-size: 16px;
            margin-right: 15px;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('partials/_navbar') %>
        <h1>Your Listings</h1>
        <ul>
            <% items.forEach(item => { %>
                <li>
                    <% if (item.photo) { %>
                        <img src="/uploads/<%= item.photo %>" alt="Photo of <%= item.item_name %>" width="150">
                    
                        <% } else {%>
                            <img src="/uploads/FOUND.png" width="150">
                            <% } %>
                    <div>
                        <h2><%= item.item_name %></h2>
                        <p><strong>Description:</strong> <%= item.description %></p>
                        <p><strong>Location:</strong> <%= item.location %></p>
                    </div>
                </li>
            <% }) %>
        </ul>
        <div style="text-align: center; margin-top: 20px;">
            <a href="/found">Report Another Found Item</a> |
            <a href="/found-items">View Found Items by Others</a>
        </div>
    </div>
</body>
</html>